{
	"compilerOptions": {
		"target": "ES2023",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"strictNullChecks": true,
		"noUncheckedIndexedAccess": true,
		"declaration": true,
		"outDir": "./",
		"allowImportingTsExtensions": true,
		"noEmit": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
